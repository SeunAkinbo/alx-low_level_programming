CC = gcc
SRC = main.c school.c
NAME = school
OBJ = $(SRC:.c=.o)
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
HEADER = m.h

.PHONY: all clean oclean fclean re

all: $(HEADER) clean $(NAME)

$(NAME): $(OBJ)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: $(HEADER) oclean all

.PHONY: clean oclean $(CC)
